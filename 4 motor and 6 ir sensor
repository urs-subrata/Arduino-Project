#define IR_SENSOR_1 2
#define IR_SENSOR_2 3
#define IR_SENSOR_3 4
#define IR_SENSOR_4 5
#define IR_SENSOR_5 6
#define IR_SENSOR_6 7

#define MOTOR_SPEED 180

int enableMotor1 = 8;
int motorPin1_1 = 9;
int motorPin2_1 = 10;

int enableMotor2 = 11;
int motorPin1_2 = 12;
int motorPin2_2 = 13;

int enableMotor3 = A0;
int motorPin1_3 = A1;
int motorPin2_3 = A2;

int enableMotor4 = A3;
int motorPin1_4 = A4;
int motorPin2_4 = A5;

void setup()
{
  pinMode(enableMotor1, OUTPUT);
  pinMode(motorPin1_1, OUTPUT);
  pinMode(motorPin2_1, OUTPUT);

  pinMode(enableMotor2, OUTPUT);
  pinMode(motorPin1_2, OUTPUT);
  pinMode(motorPin2_2, OUTPUT);

  pinMode(enableMotor3, OUTPUT);
  pinMode(motorPin1_3, OUTPUT);
  pinMode(motorPin2_3, OUTPUT);

  pinMode(enableMotor4, OUTPUT);
  pinMode(motorPin1_4, OUTPUT);
  pinMode(motorPin2_4, OUTPUT);

  pinMode(IR_SENSOR_1, INPUT);
  pinMode(IR_SENSOR_2, INPUT);
  pinMode(IR_SENSOR_3, INPUT);
  pinMode(IR_SENSOR_4, INPUT);
  pinMode(IR_SENSOR_5, INPUT);
  pinMode(IR_SENSOR_6, INPUT);

  rotateMotors(0, 0, 0, 0);
}

void loop()
{
  int irSensorValue1 = digitalRead(IR_SENSOR_1);
  int irSensorValue2 = digitalRead(IR_SENSOR_2);
  int irSensorValue3 = digitalRead(IR_SENSOR_3);
  int irSensorValue4 = digitalRead(IR_SENSOR_4);
  int irSensorValue5 = digitalRead(IR_SENSOR_5);
  int irSensorValue6 = digitalRead(IR_SENSOR_6);

  // logic here by sensor reading control
}

void rotateMotors(int motorSpeed1, int motorSpeed2, int motorSpeed3, int motorSpeed4)
{
  // Logic for motor 1
  if (motorSpeed1 < 0)
  {
    digitalWrite(motorPin1_1, LOW);
    digitalWrite(motorPin2_1, HIGH);    
  }
  else if (motorSpeed1 > 0)
  {
    digitalWrite(motorPin1_1, HIGH);
    digitalWrite(motorPin2_1, LOW);      
  }
  else
  {
    digitalWrite(motorPin1_1, LOW);
    digitalWrite(motorPin2_1, LOW);      
  }

  // Logic for motor 2
  if (motorSpeed2 < 0)
  {
    digitalWrite(motorPin1_2, LOW);
    digitalWrite(motorPin2_2, HIGH);    
  }
  else if (motorSpeed2 > 0)
  {
    digitalWrite(motorPin1_2, HIGH);
    digitalWrite(motorPin2_2, LOW);      
  }
  else
  {
    digitalWrite(motorPin1_2, LOW);
    digitalWrite(motorPin2_2, LOW);      
  }

  // Logic for motor 3
  if (motorSpeed3 < 0)
  {
    digitalWrite(motorPin1_3, LOW);
    digitalWrite(motorPin2_3, HIGH);    
  }
  else if (motorSpeed3 > 0)
  {
    digitalWrite(motorPin1_3, HIGH);
    digitalWrite(motorPin2_3, LOW);      
  }
  else
  {
    digitalWrite(motorPin1_3, LOW);
    digitalWrite(motorPin2_3, LOW);      
  }

  // Logic for motor 4
  if (motorSpeed4 < 0)
  {
    digitalWrite(motorPin1_4, LOW);
    digitalWrite(motorPin2_4, HIGH);    
  }
  else if (motorSpeed4 > 0)
  {
    digitalWrite(motorPin1_4, HIGH);
    digitalWrite(motorPin2_4, LOW);      
  }
  else
  {
    digitalWrite(motorPin1_4, LOW);
    digitalWrite(motorPin2_4, LOW);      
  }

  // AnalogWrite to the enable pins for all motors
  analogWrite(enableMotor1, abs(motorSpeed1));
  analogWrite(enableMotor2, abs(motorSpeed2));
  analogWrite(enableMotor3, abs(motorSpeed3));
  analogWrite(enableMotor4, abs(motorSpeed4));
}
